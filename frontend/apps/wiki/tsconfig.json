{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "../../packages/shared-components/src/types"],
      "@omnieconomy/shared-styles/*": ["../../packages/shared-styles/src/*"],
      "@omnieconomy/shared-config": [
        "../../packages/shared-config/src/index.ts"
      ],
      "@omnieconomy/shared-config/*": ["../../packages/shared-config/src/*"],
      "@omnieconomy/shared-components": [
        "../../packages/shared-components/src/index.ts"
      ],
      "@omnieconomy/shared-components/*": [
        "../../packages/shared-components/src/*"
      ]
    }
  },
  "include": ["src", "../../packages/shared-components/src/types"],
  "exclude": ["node_modules", "dist"]
}
